<tests name="Money Allocation Tests">
	<test>
		<input>
			<amount-to-split>1000.00</amount-to-split>
			<number-of-ways>6</number-of-ways>
		</input>
		<expected-result>
			<cut>
				<amount>166.67</amount>
				<number>4</number>
			</cut>
			<cut>
				<amount>166.66</amount>
				<number>2</number>
			</cut>
		</expected-result>
	</test>
	<test>
		<input>
			<amount-to-split>1000.00</amount-to-split>
			<number-of-ways>2</number-of-ways>
		</input>
		<expected-result>
			<cut>
				<amount>500.00</amount>
				<number>2</number>
			</cut>
		</expected-result>
	</test>
	<test>
		<input>
			<amount-to-split>1000.00</amount-to-split>
			<number-of-ways>1</number-of-ways>
		</input>
		<expected-result>
			<cut>
				<amount>1000.00</amount>
				<number>1</number>
			</cut>
		</expected-result>
	</test>
	<test>
		<input>
			<amount-to-split>0.01</amount-to-split>
			<number-of-ways>5</number-of-ways>
		</input>
		<expected-result>
			<cut>
				<amount>0.01</amount>
				<number>1</number>
			</cut>
			<cut>
				<amount>0.00</amount>
				<number>4</number>
			</cut>
		</expected-result>
	</test>
	<test>
		<input>
			<amount-to-split>0.04</amount-to-split>
			<number-of-ways>5</number-of-ways>
		</input>
		<expected-result>
			<cut>
				<amount>0.01</amount>
				<number>4</number>
			</cut>
			<cut>
				<amount>0.00</amount>
				<number>1</number>
			</cut>
		</expected-result>
	</test>
</tests>
